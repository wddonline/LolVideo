<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_hot_video_normal_news_click"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:clickable="true"
    android:background="@drawable/common_list_item_bg"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <View
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="#ff6562"
        android:layout_marginRight="5dp"/>

    <TextView
        android:id="@+id/item_hot_video_normal_news_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:lines="2"
        android:gravity="center_vertical"
        android:ellipsize="end"
        android:textSize="@dimen/textSizeItemContent"
        android:textColor="#333333"/>

    <TextView
        android:id="@+id/item_hot_video_normal_news_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="@dimen/textSizeItemExtra"/>
</LinearLayout>