<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/item_hot_video_video_click1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clickable="true"
        android:background="@drawable/common_list_item_bg"
        android:paddingLeft="@dimen/activity_horizontal_margin">

        <org.wdd.app.android.lolvideo.views.NetworkImageView
            android:id="@+id/item_hot_video_video_img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_hot_video_video_name1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorItemTitle"
            android:textSize="@dimen/textSizeItemTitle"/>

        <TextView
            android:id="@+id/item_hot_video_video_date1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorItemContent"
            android:textSize="@dimen/textSizeItemContent"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_hot_video_video_click2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clickable="true"
        android:background="@drawable/common_list_item_bg"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:visibility="gone">

        <org.wdd.app.android.lolvideo.views.NetworkImageView
            android:id="@+id/item_hot_video_video_img2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_hot_video_video_name2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorItemTitle"
            android:textSize="@dimen/textSizeItemTitle"/>

        <TextView
            android:id="@+id/item_hot_video_video_date2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorItemContent"
            android:textSize="@dimen/textSizeItemContent"/>

    </LinearLayout>

</LinearLayout>