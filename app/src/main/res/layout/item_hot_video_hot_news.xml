<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_hot_video_hot_news_click"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:clickable="true"
    android:background="@drawable/common_list_item_bg"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <org.wdd.app.android.lolvideo.views.NetworkImageView
        android:id="@+id/item_hot_video_hot_news_img"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingLeft="6dp">

        <TextView
            android:id="@+id/item_hot_video_hot_news_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSizeItemTitle"
            android:textStyle="bold"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="#333333"/>

        <TextView
            android:id="@+id/item_hot_video_hot_news_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:maxLines="2"
            android:layout_alignParentBottom="true"
            android:ellipsize="end"
            android:textSize="@dimen/textSizeItemContent"/>
    </RelativeLayout>
</LinearLayout>